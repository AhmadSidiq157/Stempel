# Melindungi file .htaccess dari akses browser
<Files .htaccess>
    Require all denied
</Files>

# Mencegah listing isi direktori
Options -Indexes

# Mengaktifkan modul rewrite URL
RewriteEngine On

# Memastikan base URL sudah benar (opsional jika ada masalah)
# RewriteBase /

# Mengalihkan semua request yang BUKAN file atau direktori yang ada
# ke file index.php sebagai titik masuk utama
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [L]
